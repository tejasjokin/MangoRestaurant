@model IEnumerable<ProductDto>
@{
	
}
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-info">Product List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-info"><i class="fa-solid fa-plus"></i> Create New Product</a> 
		</div>
	</div>
</div>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Category Name</th>
			<th>Price</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>
					@item.Name
				</td>
				<td>
					@item.CategoryName
				</td>
				<td>
					@((item.Price).ToString("c"))
				</td>
				<td>
					<a asp-controller="Product" asp-action="EditProduct" asp-route-productId="@item.ProductId" class="btn btn-success">
						Edit
					</a>
					<a asp-controller="Product" asp-action="DeleteProduct" asp-route-productId="@item.ProductId" class="btn btn-danger">
						Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
